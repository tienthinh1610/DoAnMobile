<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_login"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/blur_backgroud">
    </ImageView>

    <ImageButton
        android:onClick="home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@null"
        android:contentDescription="@string/app_name"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_home" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/bubblegum_sans"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:text="Welcome to NNHBstore"
        android:textColor="@color/orange"
        android:textSize="40dp" />
    <LinearLayout
        android:id="@+id/viewflipper"
        android:layout_below="@id/textView2"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:text="Đăng nhập tài khoản"
            android:textColor="@color/orange"
            android:textSize="23dp" />

        <EditText
            android:id="@+id/edt_uesrname"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/radius_edittext"
            android:hint="Tên Đăng Nhập"
            android:singleLine="true"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/radius_edittext"
            android:hint="Mật Khẩu"
            android:singleLine="true"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_regis"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/viewflipper"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="55dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="54dp"
        android:background="@drawable/radius_btnlogin"
        android:text="Đăng Nhập"
        android:textColor="@color/white"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo tài khoản mới?"
        android:layout_below="@id/btn_regis"
        android:textColor="@color/orange"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_regis"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/textview3"
        android:minHeight="48dp"
        android:onClick="dangky"
        android:text="Đăng ký"
        android:textColor="@color/orange"
        android:textSize="23dp"
        android:textStyle="bold" />
</RelativeLayout>